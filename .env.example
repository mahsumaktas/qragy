# ===========================
# Qragy Configuration
# ===========================

# Server
PORT=3000

# Google Gemini API (required)
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-2.5-flash-preview-05-20
GOOGLE_MAX_OUTPUT_TOKENS=1024
GOOGLE_THINKING_BUDGET=64
GOOGLE_REQUEST_TIMEOUT_MS=15000

# Model Fallback (optional - used when primary model returns 429/500/503)
GOOGLE_FALLBACK_MODEL=gemini-2.0-flash

# Bot Identity
BOT_NAME=Qragy Bot
COMPANY_NAME=
REMOTE_TOOL_NAME=

# Zendesk Integration (optional)
ZENDESK_ENABLED=false
ZENDESK_SNIPPET_KEY=
ZENDESK_DEFAULT_TAGS=qragy,ai_handoff

# Support Hours (optional)
SUPPORT_HOURS_ENABLED=false
SUPPORT_TIMEZONE=Europe/Istanbul
SUPPORT_OPEN_HOUR=8
SUPPORT_CLOSE_HOUR=18
SUPPORT_OPEN_DAYS=1,2,3,4,5,6,7

# Deterministic Collection Mode
DETERMINISTIC_COLLECTION_MODE=true

# Admin Panel
ADMIN_TOKEN=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=20
RATE_LIMIT_WINDOW_MS=60000

# Telegram Bot (optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_POLLING_INTERVAL_MS=2000

# Auto-deploy webhook (optional - GitHub push triggers git pull + restart)
DEPLOY_WEBHOOK_SECRET=
