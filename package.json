{
  "name": "qragy",
  "version": "2.1.0",
  "private": false,
  "description": "Qragy - Self-hosted AI customer support chatbot with hybrid RAG, 7 LLM providers, HITL agent inbox, and admin panel. Runs on a Raspberry Pi.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "ingest": "node scripts/ingest.js",
    "test": "vitest run --exclude 'tests/eval/**'",
    "test:watch": "vitest --exclude 'tests/eval/**'",
    "test:coverage": "vitest run --coverage --exclude 'tests/eval/**'",
    "eval": "vitest run tests/eval/chatbot-eval.test.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mahsumaktas/qragy.git"
  },
  "author": "Mahsum Aktas",
  "license": "AGPL-3.0-only",
  "keywords": [
    "chatbot",
    "rag",
    "ai",
    "self-hosted",
    "customer-support",
    "gemini",
    "lancedb",
    "raspberry-pi"
  ],
  "homepage": "https://github.com/mahsumaktas/qragy",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.26.2",
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "express": "^4.21.2",
    "jsdom": "^28.1.0",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.4.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  }
}
